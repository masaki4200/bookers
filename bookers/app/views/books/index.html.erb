<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Books</h1>

<body>
  <table>
    <thead>
      <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
          <th></th>
          <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <th><%= link_to book.title, book_path(book) %></th>
        <th><%= link_to book.body, book_path(book) %></th>
        <th class="ddd"><%= link_to 'Show',book_path(book) %></th>
        <th class="ddd"><%= link_to 'Edit',edit_book_path(book) %></th>
        <th class="ddd"><%= link_to "Destroy", book_path(book), method: :delete %></th>
      </tr>
      <% end %>
    </tbody>
  </table>


  <h2>New book</h2>


  <% if @book.errors.any? %>
      <div class = "alert alert-warning">
          <h2><%= @book.errors.full_messages.count %>error prohibited this book from being saved</h2>
          <ul>
              <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
          </ul>
      </div>
  <% end %>


  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>

      <h5><%= f.submit 'create Book' %></h5>
  <% end %>
</body>
